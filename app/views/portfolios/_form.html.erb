<%= form_with(model: portfolio_item, local: true) do |form| %>
  <% if portfolio_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(portfolio_item.errors.count, "error") %> prohibited this portfolio from being saved:</h2>

      <ul>
        <% portfolio_item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, class: 'form-control'%>
      </div>
      <h3>Technologies Used:</h3>
      <ul class="list-unstyled">
        <%= form.fields_for :technologies do |tech_form| %>
          <li class="form-group">
            <%= tech_form.label :name %>
            <%= tech_form.text_field :name, class: 'form-control' %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="col-md-6 align-self-center">
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: 'form-control', rows: 15 %>
      </div>
    </div>
  </div>
  <div class="row">
    <%= form.submit class: 'btn btn-primary btn-lg btn-block' %>
  </div>
<% end %>
