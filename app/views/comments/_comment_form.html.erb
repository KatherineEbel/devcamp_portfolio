<% unless current_user.is_a? GuestUser %>
  <%= form_for @comment, url: '#', html: { class: 'p-3'} do |f| %>
    <div class="form-group">
      <%= f.label :content, class: 'sr-only' %>
      <%= f.text_area :content,
                      class: 'form-control',
                      id: 'comment_content',
                      placeholder: 'Your comment here'
      %>
    </div>
    <%= f.submit 'Post Comment', class: 'btn btn-primary' %>
  <% end %>
<% end %>
